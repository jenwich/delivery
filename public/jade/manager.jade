extends ./layouts/layout.jade

block title
    title Store Manager

block content
    .container
        .row(style="margin-top: 20px")
            .col-md-6.col-md-offset-3
                h2#form-header Store Manager
                .panel.panel-default
                    .panel-body
                        form(class='form-horizontal', method='POST', action="/manager/signin")
                            div(class='form-group')
                                label(class='col-sm-2 control-label', for='inputUsername') Username
                                div(class='col-sm-10')
                                    input#inputUsername(name='username', class='form-control', type='text')
                            div(class='form-group')
                                label(class='col-sm-2 control-label', for='inputPassword') Password
                                div(class='col-sm-10')
                                    input#inputPassword(name='password', class='form-control', type='password')
                            div(class='form-group')
                                div(class='col-sm-10 col-sm-offset-2')
                                    button(class='btn btn-default', type='submit') Sign In
