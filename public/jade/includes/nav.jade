nav.navbar.navbar-inverse.navbar-default.navbar-fixed-top
    .container
        .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href='/') EZ Delivery
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav
                block nav-menus
                    li
                        a(href='/menus') Menus
                block nav-stores
                    li
                        a(href='/stores') Stores
                block nav-about
                    li
                        a(href='/about') About us
            if username
                ul.nav.navbar-nav.navbar-right
                    li
                        p.navbar-text Welcome, 
                            b #{username}
                    block nav-account
                        li
                            a(href='/account') My Account
                    li
                        a(href='/signout') Sign out
            else if store_name
                ul.nav.navbar-nav.navbar-right
                    li
                        p.navbar-text Welcome, 
                            b #{store_name}
                    block nav-account-store
                        li
                            a(href='/manager/view') My Store
                    li
                        a(href='/signout') Sign out
            else 
                ul.nav.navbar-nav.navbar-right
                    li
                        p.navbar-btn
                            a.btn.btn-default(href='/signin') Sign in
                    li
                        p.navbar-btn
                            a.btn.btn-success(href='/signup') Sign up
